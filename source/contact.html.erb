---
title: Contact | Lanca Sales
---

<div class="page contact">
  <h2>
    <%= data.pages.contact.title %>
  </h2>
  <p>
    <%= data.pages.contact.subtitle %>
  </p>

  <section class="contact-cards">
    <%= partial "partials/contact-card",
      locals: {
        icon: "address",
        contact_method: data.settings.contact.address,
        link: "https://www.google.com/maps/place/Lanca+Sales/@40.6922822,-74.2294328,17z/data=!3m1!4b1!4m5!3m4!1s0x89c3ad364ab04f3d:0x608498b746fc2bd4!8m2!3d40.692292!4d-74.2272583"
      } %>

    <%= partial "partials/contact-card",
      locals: {
        icon: "phone",
        contact_method: data.settings.contact.phone,
        link: data.settings.contact.phone
      } %>

    <div class="contact-card">
      <%= inline_svg(
        "email.svg",
        class: "contact-card__icon"
      )%>
      <p><%= data.settings.contact.email %></p>
    </div>
  </section>

  <iframe
  width="600"
  height="450"
  style="border:0"
  loading="lazy"
  allowfullscreen
  src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDGgV1juMsGZkJxdbRx6_Rvn9yKaHRas6s
    &q=Space+Needle,Seattle+WA">
</iframe>

</div>
